{
  "name": "itunes-store-api",
  "version": "1.0.1",
  "description": "Query Apple store catalogs using the iTunes Search API.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/itunes-store-api",
  "keywords": [
    "itunes",
    "store",
    "search"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/itunes-store-api.js",
  "unpkg": "./dist/itunes-store-api.umd.js",
  "module": "./dist/itunes-store-api.module.js",
  "exports": {
    ".": {
      "require": "./dist/itunes-store-api.js",
      "import": "./dist/itunes-store-api.modern.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsc-mixed --project tsconfig.json declarations.d.ts",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "microbundle --tsconfig tsconfig.build.json",
    "clean": "jest --clearCache && rimraf node_modules",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{ts,tsx}' --fix",
    "lint:prettier": "prettier --write '**/*.{ts,tsx}' --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepare": "rimraf dist && yarn build",
    "release": "yarn login && np",
    "test": "jest"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^1.6.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.3",
    "eslint": "^7.30.0",
    "husky": "4.3.8",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.0.1",
    "microbundle": "^0.13.3",
    "np": "^7.5.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "tsc-mixed": "^1.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0"
  }
}
