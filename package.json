{
  "name": "@bouchenoiremarc/itunes-search-api",
  "version": "0.0.0",
  "description": "Query Apple catalogs using the iTunes Search API",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/itunes-search-api",
  "keywords": [
    "geometry",
    "dimensions",
    "layout",
    "guides"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/itunes-search-api.js",
  "umd:main": "./dist/itunes-search-api.umd.js",
  "module": "./dist/itunes-search-api.module.js",
  "exports": "./dist/itunes-search-api.modern.js",
  "esmodule": "./dist/itunes-search-api.modern.js",
  "esnext": "./dist/itunes-search-api.modern.js",
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "microbundle",
    "clean": "rimraf node_modules",
    "lint": "eslint '**/*.{ts,tsx}' --fix && prettier --write '**/*.{ts,tsx}'",
    "prepare": "rimraf dist && yarn build"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^1.4.1",
    "@types/node": "^16.4.3",
    "eslint": "^7.30.0",
    "husky": "4.3.8",
    "lint-staged": "^11.0.1",
    "microbundle": "^0.13.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0"
  }
}
